<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence">

  <persistence-unit name="monitoring" transaction-type="RESOURCE_LOCAL">

    <class>com.futoshita.kafka.poc.dao.entity.WorkflowMonitoring</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:32768/mock-scheduler" />
      <property name="javax.persistence.jdbc.user" value="postgres" />
      <property name="javax.persistence.jdbc.password" value="mysecretpassword" />
      <property name="eclipselink.logging.level" value="ALL" />
    </properties>

  </persistence-unit>

</persistence>